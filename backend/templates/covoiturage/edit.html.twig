{% extends 'base.html.twig' %}

{% block title %}Modifier Covoiturage - {{ covoiturage.lieuDepart }} â†’ {{ covoiturage.lieuArrivee }}{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Modifier le covoiturage</h2>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lieuDepart) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lieuArrivee) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.dateDepart) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.heureDepart) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.dateArrivee) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.heureArrivee) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.nbPlace) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.prixPersonne) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.status) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.voiture) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('covoiturage_show', {'id': covoiturage.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
