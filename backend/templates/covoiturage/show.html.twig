{% extends 'base.html.twig' %}

{% block title %}Covoiturage - {{ covoiturage.lieuDepart }} → {{ covoiturage.lieuArrivee }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ covoiturage.lieuDepart }} → {{ covoiturage.lieuArrivee }}</h1>
            <div>
                <a href="{{ path('covoiturage_edit', {'id': covoiturage.id}) }}" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <a href="{{ path('covoiturage_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Détails du covoiturage</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Départ :</strong> {{ covoiturage.lieuDepart }}</p>
                                <p><strong>Arrivée :</strong> {{ covoiturage.lieuArrivee }}</p>
                                <p><strong>Date de départ :</strong> {{ covoiturage.dateDepart|date('d/m/Y') }}</p>
                                <p><strong>Heure de départ :</strong> {{ covoiturage.heureDepart|date('H:i') }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Date d'arrivée :</strong> {{ covoiturage.dateArrivee|date('d/m/Y') }}</p>
                                <p><strong>Heure d'arrivée :</strong> {{ covoiturage.heureArrivee|date('H:i') }}</p>
                                <p><strong>Places disponibles :</strong>
                                    <span class="badge bg-info fs-6">{{ covoiturage.nbPlace }}</span>
                                </p>
                                <p><strong>Prix par personne :</strong>
                                    <span class="badge bg-success fs-6">{{ covoiturage.prixPersonne }}€</span>
                                </p>
                            </div>
                        </div>

                        <div class="mt-3">
                            <p><strong>Statut :</strong>
                                {% if covoiturage.status == 'disponible' %}
                                    <span class="badge bg-success">Disponible</span>
                                {% elseif covoiturage.status == 'complet' %}
                                    <span class="badge bg-warning">Complet</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ covoiturage.status }}</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h3>Véhicule</h3>
                    </div>
                    <div class="card-body">
                        {% if covoiturage.voiture %}
                            <p><strong>Modèle :</strong> {{ covoiturage.voiture.modele }}</p>
                            <p><strong>Marque :</strong> {{ covoiturage.voiture.marque.libelle }}</p>
                            <p><strong>Couleur :</strong> {{ covoiturage.voiture.couleur }}</p>
                            <p><strong>Énergie :</strong> {{ covoiturage.voiture.energie ?: 'Non renseignée' }}</p>
                            <p><strong>Conducteur :</strong> {{ covoiturage.voiture.utilisateur.pseudo }}</p>
                        {% else %}
                            <p class="text-muted">Aucun véhicule assigné.</p>
                        {% endif %}
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h3>Passagers</h3>
                    </div>
                    <div class="card-body">
                        {% if covoiturage.passengers is not empty %}
                            <div class="row">
                                {% for passenger in covoiturage.passengers %}
                                    <div class="col-md-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            {% if passenger.photo %}
                                                <img src="{{ asset('uploads/photos/' ~ passenger.photo) }}"
                                                     alt="Photo de {{ passenger.pseudo }}"
                                                     class="rounded-circle me-2" style="width: 40px; height: 40px;">
                                            {% else %}
                                                <div class="bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center"
                                                     style="width: 40px; height: 40px;">
                                                    <span class="text-white">{{ passenger.pseudo|first|upper }}</span>
                                                </div>
                                            {% endif %}
                                            <div>
                                                <strong>{{ passenger.pseudo }}</strong><br>
                                                <small class="text-muted">{{ passenger.nom }} {{ passenger.prenom }}</small>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">Aucun passager inscrit.</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Actions</h3>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-success w-100 mb-2">
                            <i class="bi bi-person-plus"></i> Réserver une place
                        </button>

                        <form method="post" action="{{ path('covoiturage_delete', {'id': covoiturage.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce covoiturage ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ covoiturage.id) }}">
                            <button class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3>Avis</h3>
                    </div>
                    <div class="card-body">
                        {% if covoiturage.avisRecus is not empty %}
                            {% for avis in covoiturage.avisRecus %}
                                <div class="mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="me-2">
                                            {% for i in 1..5 %}
                                                <i class="bi bi-star{% if i <= avis.note %}-fill text-warning{% else %}-empty text-muted{% endif %}"></i>
                                            {% endfor %}
                                        </div>
                                        <small class="text-muted">{{ avis.auteur.pseudo }}</small>
                                    </div>
                                    {% if avis.commentaire %}
                                        <p class="mb-0 small">{{ avis.commentaire }}</p>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Aucun avis pour ce covoiturage.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
