{% extends 'base.html.twig' %}

{% block title %}Gestion des Rôles{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestion des Rôles</h1>
            <a href="{{ path('admin_role_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau Rôle
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Libellé</th>
                                <th>Utilisateurs</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for role in roles %}
                            <tr>
                                <td>{{ role.id }}</td>
                                <td>
                                    <span class="badge bg-primary">{{ role.libelle }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ role.utilisateurs|length }} utilisateur(s)</span>
                                </td>
                                <td>{{ role.dateCreation|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('admin_role_show', {'id': role.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_role_edit', {'id': role.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="{{ path('admin_role_assign', {'id': role.id}) }}" class="btn btn-sm btn-outline-success" title="Assigner">
                                            <i class="bi bi-person-plus"></i>
                                        </a>
                                        {% if role.utilisateurs|length == 0 %}
                                        <form method="post" action="{{ path('admin_role_delete', {'id': role.id}) }}" style="display: inline;"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce rôle ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
                                            <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="bi bi-info-circle"></i> Aucun rôle trouvé
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
