{% extends 'base.html.twig' %}

{% block title %}Statistiques - Dashboard{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-graph-up"></i> Statistiques
            </h1>
            <div class="btn-group" role="group">
                <a href="{{ path('api_statistics_all') }}" class="btn btn-outline-primary" target="_blank">
                    <i class="bi bi-code"></i> API JSON
                </a>
                <button type="button" class="btn btn-outline-secondary" onclick="window.location.reload()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>

        <!-- Statistiques générales -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center border-primary">
                    <div class="card-body">
                        <i class="bi bi-people display-4 text-primary mb-2"></i>
                        <h5 class="card-title">Utilisateurs</h5>
                        <h2 class="text-primary">{{ stats.general.total_utilisateurs ?? 0 }}</h2>
                        <small class="text-muted">Total</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-success">
                    <div class="card-body">
                        <i class="bi bi-car-front display-4 text-success mb-2"></i>
                        <h5 class="card-title">Covoiturages</h5>
                        <h2 class="text-success">{{ stats.general.total_covoiturages ?? 0 }}</h2>
                        <small class="text-muted">{{ stats.general.covoiturages_disponibles ?? 0 }} disponibles</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-info">
                    <div class="card-body">
                        <i class="bi bi-truck display-4 text-info mb-2"></i>
                        <h5 class="card-title">Véhicules</h5>
                        <h2 class="text-info">{{ stats.general.total_voitures ?? 0 }}</h2>
                        <small class="text-muted">Enregistrés</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-warning">
                    <div class="card-body">
                        <i class="bi bi-star display-4 text-warning mb-2"></i>
                        <h5 class="card-title">Avis</h5>
                        <h2 class="text-warning">{{ stats.general.total_avis ?? 0 }}</h2>
                        <small class="text-muted">{{ stats.general.avis_approuves ?? 0 }} approuvés</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Graphiques -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Activité des utilisateurs</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="userActivityChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Répartition des utilisateurs</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="userDistributionChart" width="300" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques détaillées -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Covoiturages par statut</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="covoiturageStatusChart" width="300" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Avis par note</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="avisRatingChart" width="300" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activité récente -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Activité récente</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <h5>Covoiturages récents</h5>
                                {% if stats.activite_recente.covoiturages_recents|length > 0 %}
                                <div class="list-group list-group-flush">
                                    {% for covoiturage in stats.activite_recente.covoiturages_recents|slice(0, 5) %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ covoiturage.lieu_depart }} → {{ covoiturage.lieu_arrivee }}</h6>
                                            <small>{{ covoiturage.date_depart|date('d/m H:i') }}</small>
                                        </div>
                                        <p class="mb-1">Par {{ covoiturage.conducteur }}</p>
                                    </div>
                                    {% endfor %}
                                </div>
                                {% else %}
                                <p class="text-muted">Aucun covoiturage récent</p>
                                {% endif %}
                            </div>
                            <div class="col-md-4">
                                <h5>Avis récents</h5>
                                {% if stats.activite_recente.avis_recents|length > 0 %}
                                <div class="list-group list-group-flush">
                                    {% for avis in stats.activite_recente.avis_recents|slice(0, 5) %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ avis.note }}/5</h6>
                                            <small>{{ avis.date_creation|date('d/m H:i') }}</small>
                                        </div>
                                        <p class="mb-1">Par {{ avis.auteur }}</p>
                                    </div>
                                    {% endfor %}
                                </div>
                                {% else %}
                                <p class="text-muted">Aucun avis récent</p>
                                {% endif %}
                            </div>
                            <div class="col-md-4">
                                <h5>Inscriptions récentes</h5>
                                {% if stats.activite_recente.utilisateurs_recents|length > 0 %}
                                <div class="list-group list-group-flush">
                                    {% for user in stats.activite_recente.utilisateurs_recents|slice(0, 5) %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ user.pseudo }}</h6>
                                            <small>{{ user.date_inscription|date('d/m H:i') }}</small>
                                        </div>
                                        <p class="mb-1">{{ user.prenom }} {{ user.nom }}</p>
                                    </div>
                                    {% endfor %}
                                </div>
                                {% else %}
                                <p class="text-muted">Aucune inscription récente</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Graphique d'activité des utilisateurs
    const userActivityCtx = document.getElementById('userActivityChart').getContext('2d');
    new Chart(userActivityCtx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Jun'],
            datasets: [{
                label: 'Inscriptions',
                data: [12, 19, 3, 5, 2, 3],
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }, {
                label: 'Covoiturages',
                data: [2, 3, 20, 5, 1, 10],
                borderColor: 'rgb(255, 99, 132)',
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Répartition des utilisateurs
    const userDistCtx = document.getElementById('userDistributionChart').getContext('2d');
    new Chart(userDistCtx, {
        type: 'doughnut',
        data: {
            labels: ['Avec voitures', 'Avec trajets', 'Avec avis', 'Inactifs'],
            datasets: [{
                data: [
                    {{ stats.utilisateurs.utilisateurs_avec_voitures ?? 0 }},
                    {{ stats.utilisateurs.utilisateurs_avec_trajets ?? 0 }},
                    {{ stats.utilisateurs.utilisateurs_avec_avis ?? 0 }},
                    {{ (stats.general.total_utilisateurs ?? 0) - (stats.utilisateurs.utilisateurs_avec_voitures ?? 0) - (stats.utilisateurs.utilisateurs_avec_trajets ?? 0) - (stats.utilisateurs.utilisateurs_avec_avis ?? 0) }}
                ],
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)',
                    'rgb(201, 203, 207)'
                ]
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            }
        }
    });

    // Statut des covoiturages
    const covoiturageCtx = document.getElementById('covoiturageStatusChart').getContext('2d');
    new Chart(covoiturageCtx, {
        type: 'pie',
        data: {
            labels: ['Disponibles', 'Complets', 'Annulés'],
            datasets: [{
                data: [
                    {{ stats.covoiturages.disponibles ?? 0 }},
                    {{ stats.covoiturages.complets ?? 0 }},
                    {{ stats.covoiturages.annules ?? 0 }}
                ],
                backgroundColor: [
                    'rgb(75, 192, 192)',
                    'rgb(255, 99, 132)',
                    'rgb(255, 205, 86)'
                ]
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            }
        }
    });

    // Répartition des notes d'avis
    const avisCtx = document.getElementById('avisRatingChart').getContext('2d');
    new Chart(avisCtx, {
        type: 'bar',
        data: {
            labels: ['1★', '2★', '3★', '4★', '5★'],
            datasets: [{
                label: 'Nombre d\'avis',
                data: [
                    {{ stats.avis.repartition_notes['1'] ?? 0 }},
                    {{ stats.avis.repartition_notes['2'] ?? 0 }},
                    {{ stats.avis.repartition_notes['3'] ?? 0 }},
                    {{ stats.avis.repartition_notes['4'] ?? 0 }},
                    {{ stats.avis.repartition_notes['5'] ?? 0 }}
                ],
                backgroundColor: 'rgba(153, 102, 255, 0.6)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
});
</script>
{% endblock %}
