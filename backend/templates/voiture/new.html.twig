{% extends 'base.html.twig' %}

{% block title %}Nouveau Véhicule{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Ajouter un véhicule</h2>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.marque) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.modele) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.couleur) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.energie) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.immatriculation) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nbPlace) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.utilisateur) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('voiture_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Ajouter
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
