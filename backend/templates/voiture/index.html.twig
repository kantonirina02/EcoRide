{% extends 'base.html.twig' %}

{% block title %}Gestion des Véhicules{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-truck"></i> Gestion des Véhicules
                {% if voitures|length > 0 %}
                    <span class="badge bg-primary ms-2">{{ voitures|length }}</span>
                {% endif %}
            </h1>
            <div class="btn-group" role="group">
                <a href="{{ path('voiture_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouveau Véhicule
                </a>
                <a href="{{ path('api_voiture_index') }}" class="btn btn-outline-primary" target="_blank">
                    <i class="bi bi-code"></i> API
                </a>
            </div>
        </div>

        <!-- Filtres -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="marque" class="form-label">Marque</label>
                        <select name="marque" id="marque" class="form-select">
                            <option value="">Toutes les marques</option>
                            {% for marque in marques %}
                            <option value="{{ marque.id }}" {{ app.request.query.get('marque') == marque.id ? 'selected' : '' }}>
                                {{ marque.nom }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="energie" class="form-label">Énergie</label>
                        <select name="energie" id="energie" class="form-select">
                            <option value="">Toutes les énergies</option>
                            <option value="essence" {{ app.request.query.get('energie') == 'essence' ? 'selected' : '' }}>Essence</option>
                            <option value="diesel" {{ app.request.query.get('energie') == 'diesel' ? 'selected' : '' }}>Diesel</option>
                            <option value="electrique" {{ app.request.query.get('energie') == 'electrique' ? 'selected' : '' }}>Électrique</option>
                            <option value="hybride" {{ app.request.query.get('energie') == 'hybride' ? 'selected' : '' }}>Hybride</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="couleur" class="form-label">Couleur</label>
                        <input type="text" name="couleur" id="couleur" class="form-control"
                               value="{{ app.request.query.get('couleur') }}" placeholder="Rouge, Bleu...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-search"></i> Filtrer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Véhicule</th>
                                <th>Propriétaire</th>
                                <th>Caractéristiques</th>
                                <th>Statut</th>
                                <th>Covoiturages</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for voiture in voitures %}
                                <tr>
                                    <td>{{ voiture.id }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-info text-white rounded p-2 me-3">
                                                <i class="bi bi-car-front"></i>
                                            </div>
                                            <div>
                                                <strong>{{ voiture.marque.nom }} {{ voiture.modele }}</strong><br>
                                                <small class="text-muted">{{ voiture.annee }} - {{ voiture.couleur }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>{{ voiture.utilisateur.pseudo }}</div>
                                        <small class="text-muted">{{ voiture.utilisateur.email }}</small>
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div><i class="bi bi-fuel-pump"></i> {{ voiture.energie|title }}</div>
                                            <div><i class="bi bi-people"></i> {{ voiture.nbPlace }} places</div>
                                            <div><i class="bi bi-speedometer2"></i> {{ voiture.clim ? 'Climatisée' : 'Non climatisée' }}</div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if voiture.actif %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Actif
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Inactif
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="bi bi-car-front"></i> {{ voiture.covoiturages|length }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('voiture_show', {'id': voiture.id}) }}"
                                               class="btn btn-sm btn-outline-primary" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('voiture_edit', {'id': voiture.id}) }}"
                                               class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('voiture_delete', {'id': voiture.id}) }}"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce véhicule ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.id) }}">
                                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="bi bi-truck display-4 mb-3"></i><br>
                                        <strong>Aucun véhicule trouvé</strong><br>
                                        <small>Ajoutez votre premier véhicule pour commencer !</small>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
