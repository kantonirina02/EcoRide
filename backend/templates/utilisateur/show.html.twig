{% extends 'base.html.twig' %}

{% block title %}Utilisateur - {{ utilisateur.pseudo }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ utilisateur.pseudo }}</h1>
            <div>
                <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <a href="{{ path('utilisateur_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Informations personnelles</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Nom :</strong> {{ utilisateur.nom }}</p>
                                <p><strong>Prénom :</strong> {{ utilisateur.prenom }}</p>
                                <p><strong>Email :</strong> {{ utilisateur.email }}</p>
                                <p><strong>Pseudo :</strong> {{ utilisateur.pseudo }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Téléphone :</strong> {{ utilisateur.telephone ?: 'Non renseigné' }}</p>
                                <p><strong>Adresse :</strong> {{ utilisateur.adresse ?: 'Non renseignée' }}</p>
                                <p><strong>Date de naissance :</strong>
                                    {% if utilisateur.dateNaissance %}
                                        {{ utilisateur.dateNaissance|date('d/m/Y') }}
                                    {% else %}
                                        Non renseignée
                                    {% endif %}
                                </p>
                                <p><strong>Crédits :</strong>
                                    <span class="badge bg-success fs-6">{{ utilisateur.credits }}</span>
                                </p>
                            </div>
                        </div>

                        {% if utilisateur.photo %}
                            <div class="mt-3">
                                <img src="{{ asset('uploads/photos/' ~ utilisateur.photo) }}"
                                     alt="Photo de {{ utilisateur.pseudo }}"
                                     class="img-thumbnail" style="max-width: 200px;">
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h3>Véhicules</h3>
                    </div>
                    <div class="card-body">
                        {% if utilisateur.voitures is not empty %}
                            <div class="row">
                                {% for voiture in utilisateur.voitures %}
                                    <div class="col-md-6 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">{{ voiture.modele }}</h5>
                                                <p class="card-text">
                                                    <strong>Marque :</strong> {{ voiture.marque.libelle }}<br>
                                                    <strong>Couleur :</strong> {{ voiture.couleur }}<br>
                                                    <strong>Énergie :</strong> {{ voiture.energie ?: 'Non renseignée' }}<br>
                                                    <strong>Immatriculation :</strong> {{ voiture.immatriculation ?: 'Non renseignée' }}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">Aucun véhicule enregistré.</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Rôles</h3>
                    </div>
                    <div class="card-body">
                        {% for role in utilisateur.roles %}
                            <span class="badge bg-primary me-1">{{ role.libelle }}</span>
                        {% endfor %}
                        {% if utilisateur.roles is empty %}
                            <p class="text-muted">Aucun rôle assigné.</p>
                        {% endif %}
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h3>Actions</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('utilisateur_suspend', {'id': utilisateur.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir suspendre cet utilisateur ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('suspend' ~ utilisateur.id) }}">
                            <button class="btn btn-warning w-100 mb-2">
                                <i class="bi bi-pause-circle"></i> Suspendre
                            </button>
                        </form>

                        <form method="post" action="{{ path('utilisateur_delete', {'id': utilisateur.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                            <button class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
