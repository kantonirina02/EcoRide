{% extends 'base.html.twig' %}

{% block title %}Gestion des Avis{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-star"></i> Gestion des Avis
                {% if avis|length > 0 %}
                    <span class="badge bg-primary ms-2">{{ avis|length }}</span>
                {% endif %}
            </h1>
            <div class="btn-group" role="group">
                <a href="{{ path('avis_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvel Avis
                </a>
                <a href="{{ path('api_avis_index') }}" class="btn btn-outline-primary" target="_blank">
                    <i class="bi bi-code"></i> API
                </a>
            </div>
        </div>

        <!-- Filtres -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="statut" class="form-label">Statut</label>
                        <select name="statut" id="statut" class="form-select">
                            <option value="">Tous les statuts</option>
                            <option value="approuvé" {{ app.request.query.get('statut') == 'approuvé' ? 'selected' : '' }}>Approuvé</option>
                            <option value="en_attente" {{ app.request.query.get('statut') == 'en_attente' ? 'selected' : '' }}>En attente</option>
                            <option value="rejeté" {{ app.request.query.get('statut') == 'rejeté' ? 'selected' : '' }}>Rejeté</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="note_min" class="form-label">Note minimum</label>
                        <select name="note_min" id="note_min" class="form-select">
                            <option value="">Toutes les notes</option>
                            <option value="1" {{ app.request.query.get('note_min') == '1' ? 'selected' : '' }}>1★ minimum</option>
                            <option value="2" {{ app.request.query.get('note_min') == '2' ? 'selected' : '' }}>2★ minimum</option>
                            <option value="3" {{ app.request.query.get('note_min') == '3' ? 'selected' : '' }}>3★ minimum</option>
                            <option value="4" {{ app.request.query.get('note_min') == '4' ? 'selected' : '' }}>4★ minimum</option>
                            <option value="5" {{ app.request.query.get('note_min') == '5' ? 'selected' : '' }}>5★ seulement</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="search" class="form-label">Recherche</label>
                        <input type="text" name="search" id="search" class="form-control"
                               value="{{ app.request.query.get('search') }}" placeholder="Auteur, commentaire...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-search"></i> Filtrer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Auteur</th>
                                <th>Note</th>
                                <th>Commentaire</th>
                                <th>Statut</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for avi in avis %}
                                <tr>
                                    <td>{{ avi.id }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div>
                                                <strong>{{ avi.auteur.pseudo }}</strong><br>
                                                <small class="text-muted">{{ avi.auteur.prenom }} {{ avi.auteur.nom }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% for i in 1..5 %}
                                                {% if i <= avi.note %}
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                {% else %}
                                                    <i class="bi bi-star text-muted"></i>
                                                {% endif %}
                                            {% endfor %}
                                            <span class="ms-2 badge bg-primary">{{ avi.note }}/5</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 300px;" title="{{ avi.commentaire }}">
                                            {{ avi.commentaire|length > 100 ? avi.commentaire|slice(0, 100) ~ '...' : avi.commentaire }}
                                        </div>
                                    </td>
                                    <td>
                                        {% if avi.statut == 'approuvé' %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Approuvé
                                            </span>
                                        {% elseif avi.statut == 'en_attente' %}
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock"></i> En attente
                                            </span>
                                        {% elseif avi.statut == 'rejeté' %}
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Rejeté
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ avi.statut }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div>{{ avi.dateCreation|date('d/m/Y') }}</div>
                                        <small class="text-muted">{{ avi.dateCreation|date('H:i') }}</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('avis_show', {'id': avi.id}) }}"
                                               class="btn btn-sm btn-outline-primary" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('avis_edit', {'id': avi.id}) }}"
                                               class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            {% if avi.statut == 'en_attente' %}
                                            <form method="post" action="{{ path('avis_approve', {'id': avi.id}) }}"
                                                  style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ avi.id) }}">
                                                <button class="btn btn-sm btn-outline-success" title="Approuver">
                                                    <i class="bi bi-check"></i>
                                                </button>
                                            </form>
                                            <form method="post" action="{{ path('avis_reject', {'id': avi.id}) }}"
                                                  style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ avi.id) }}">
                                                <button class="btn btn-sm btn-outline-danger" title="Rejeter">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </form>
                                            {% endif %}
                                            <form method="post" action="{{ path('avis_delete', {'id': avi.id}) }}"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.id) }}">
                                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="bi bi-star display-4 mb-3"></i><br>
                                        <strong>Aucun avis trouvé</strong><br>
                                        <small>Les avis apparaîtront ici après les covoiturages !</small>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
